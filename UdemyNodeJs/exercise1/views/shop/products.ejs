
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <% if(prods.length > 0) { %>
         
          <% for(product of prods){%> 
            <div class="card" style="width: 18rem;">
            <img src="<%= product.imgUrl%>" class="card-img product_img" alt="...">
            <div class="card-body">
             <h5 class="card-title product_title"><%= product.title %></h5>
             <h5 class="card-title product_price">&#8377; <%= product.price %></h5>
              <p class="card-text product_description"><%= product.desc%></p>
              <div class="action" style="display: flex;">
                <a type="button" class="card-link btn btn-primary" href="#" >
                  <i class="fa-solid fa-circle-info"></i>
                  <span class="card-text">
                    Details
                  </span></a>
                <a href="#" type="button" class="card-link btn btn-success">
                  <i class="fa-solid fa-cart-shopping"></i>
                   <span class="card-text">Add Cart</span>
                  </a>
              </div>
              
            </div> 
          </div>
          <%} %>
          
       

     <% } else{%>
      <h2>No Products </h2>
     <% } %>
       
        
        
    </main>
    
    <%- include('../includes/end.ejs') %>